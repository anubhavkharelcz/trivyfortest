# Using an intentionally older base image to demonstrate vulnerability detection
FROM node:16-alpine

# Set working directory
WORKDIR /app

# Install system dependencies (intentionally including some with known vulnerabilities)
RUN apk add --no-cache \
    curl \
    wget \
    git \
    openssl

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies (with potential vulnerabilities)
RUN npm install --production

# Copy application code
COPY app.js .

# Create non-root user (security best practice)
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001
USER nodejs

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1
